<p id="notice"><%= notice %></p>

<h1>To Do:</h1>

<% if current_user %>
  Hello, <%= current_user.name %>
  <%= link_to "Logout", logout_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Order</th>
      <th>Complete</th>
      <th>Due On</th>
      <th colspan="3">
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.text %></td>
        <td><%= todo.order %></td>
        <td><%= todo.complete %></td>
        <td><%= todo.due_on %></td>
        <td><%= link_to 'Show', todo_path(todo) %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_todo_path %>
